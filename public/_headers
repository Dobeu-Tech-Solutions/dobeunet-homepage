# Security Headers for Dobeu Tech Solutions
# These headers help protect against common web vulnerabilities

/*
  # Content Security Policy - Restrict sources of content
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://assets.apollo.io https://app.apollo.io https://js.intercomcdn.com https://widget.intercom.io https://*.intercom.io; style-src 'self' 'unsafe-inline' https://js.intercomcdn.com; img-src 'self' data: https:; font-src 'self' data: https://js.intercomcdn.com; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://app.apollo.io https://*.intercom.io https://api-iam.intercom.io wss://*.intercom.io; frame-src https://intercom-sheets.com https://*.intercom.io; child-src https://intercom-sheets.com https://*.intercom.io; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://app.apollo.io;

  # Prevent clickjacking attacks
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable XSS filter in browsers
  X-XSS-Protection: 1; mode=block

  # Referrer policy - control how much referrer information is shared
  Referrer-Policy: strict-origin-when-cross-origin

  # Feature Policy / Permissions Policy - restrict browser features
  Permissions-Policy: accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()

  # Strict Transport Security - force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cache Control for HTML (no cache)
  Cache-Control: public, max-age=0, must-revalidate

# Static assets - aggressive caching
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images - moderate caching
/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800

/*.webp
  Cache-Control: public, max-age=604800
